			rs.close();
			stat.close();

			return result;

		} catch (Exception e) {
			System.out.println("MyPageDAO.getTourCnt");
			e.printStackTrace();

		}
		return 0;
	}
	
	// 숙소 총 갯수 가져오는 메소드
	public int getLodgingCnt() {
		try {

